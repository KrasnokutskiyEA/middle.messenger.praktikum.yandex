//- including mixins
include ../../../src/modules/credentialsForm/credentialsForm.pug
include ../../../src/templates/centerChildren/centerChildrenMixin.pug
include ../../../src/components/primaryBtn/primaryBtn.pug
include ../../../src/components/textField/textField.pug

//- variables
- 
  const parameters = {
    title: 'Create Account',
    linkTo: '/signIn.html',
    linkMessage: 'Sign in'
  }
- 
  const textFieldParameters = [
    {
      label: 'Email',
      type: 'text',
      name: 'email', 
      id: 'email', 
      placeholder: 'Email',
      required: 'required'
    },
    {
      label: 'Username',
      type: 'text',
      name: 'login', 
      id: 'login', 
      placeholder: 'Username',
      required: 'required'
    },
    {
      label: 'First Name',
      type: 'text',
      name: 'first_name', 
      id: 'first_name', 
      placeholder: 'First Name',
      required: 'required'
    },
    {
      label: 'Last Name',
      type: 'text',
      name: 'second_name', 
      id: 'second_name', 
      placeholder: 'Last Name',
      required: 'required'
    },
    {
      label: 'Phone',
      type: 'text',
      name: 'phone', 
      id: 'phone', 
      placeholder: 'Phone',
      required: 'required'
    },
    {
      label: 'Password',
      type: 'password',
      name: 'password', 
      id: 'password', 
      placeholder: 'Password',
      required: 'required'
    },
    {
      label: 'Confirm password',
      type: 'password',
      name: 'confirm_password', 
      id: 'confirm_password', 
      placeholder: 'Confirm password',
      required: 'required'
    }
  ]

//- template
+centerChildrenMixin()
  main
    +credentialsForm()
      div(class='credentials_title' style='margin-bottom:40px;')= parameters.title
      each item in textFieldParameters
        +textField(item)
      +primaryBtn('Sign Up')(style='margin-top:60px;')
      a(class='credentials_link' href=parameters.linkTo) #{parameters.linkMessage}