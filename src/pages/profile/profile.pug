//- including mixins
include ../../../src/modules/credentialsForm/credentialsForm.pug
include ../../../src/templates/sideNav/sideNavMixin.pug
include ../../../src/templates/centerChildren/centerChildrenMixin.pug
include ../../../src/components/primaryBtn/primaryBtn.pug
include ../../../src/components/roundBtn/roundBtn.pug
include ../../../src/components/textField/textField.pug
include ../../../src/components/avatar/avatar.pug

//- template
+sideNavMixin()
  form
    +roundBtn()(style='transform: rotate(180deg);', formaction='/chat.html')
+centerChildrenMixin()
  main
    +credentialsForm(parameters)
      +avatar()(style='margin-bottom:40px;')
      each item in textFieldParameters
        +textField(item)
      +primaryBtn('Submit')(style='margin-top:60px;')
      a(class='credentials_link' href= parameters.linkPasswordTo) #{parameters.linkPasswordLabel}
      a(class='credentials_link' href= parameters.linkLogoutTo) #{parameters.linkLogoutLabel}